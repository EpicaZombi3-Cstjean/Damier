<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <!-- Note : Le Heigth est en wrap content afin qu'il ne contienne que le nÃ©cessaire! -->


    <TextView
        android:id="@+id/numero_move"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="0"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/move_info_manoury"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/numero_move"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="(10x10x10)"></TextView>


</androidx.constraintlayout.widget.ConstraintLayout>